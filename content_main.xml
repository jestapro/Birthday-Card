<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrnd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:id="@+id/hbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Wishes From our Group"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#f9f9fa"
        android:textAppearance="?android:textAppearanceLarge"/>

    <ImageView
        android:id="@+id/bln1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/bln_one"
        android:layout_below="@id/hbd"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-30dp"
        />
    <ImageView
        android:id="@+id/bln2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/bln_one"
        android:layout_below="@id/hbd"
        android:layout_marginTop="-10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:id="@+id/bln3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/bln_one"
        android:layout_below="@id/hbd"
        android:layout_toLeftOf="@id/bln2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/bln4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/bln_one"
        android:layout_below="@id/bln1"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="25dp"
        />
    <ImageView
        android:id="@+id/bln5"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/bln_one"
        android:layout_below="@id/bln2"
        android:layout_toRightOf="@id/bln4"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="60dp"
        />
    <ImageView
        android:id="@+id/happybthday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/happybthday"
        android:layout_below="@id/hbd"
        android:layout_marginTop="30dp"
        android:padding="15dp" />


    <ImageView
        android:id="@+id/cake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cake"
        android:layout_alignParentBottom="true" />
    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jayess Shakya"
        android:textStyle="bold|italic"
        android:layout_below="@id/happybthday"
        android:layout_centerHorizontal="true"
        android:textColor="#fbf2f5a2"
        android:layout_marginTop="-30dp"
        android:textSize="30dp"/>

</RelativeLayout>
